<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="AppTheme.HighlightedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="AppTheme.BusTime" parent="android:Widget.TextView">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white_text</item>

        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">3dp</item>

        <item name="android:gravity">fill_horizontal|center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
